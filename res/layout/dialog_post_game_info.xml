<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_borderblack"
    android:padding="5dp" >

    <com.dreamfire.whereintheworld.customviews.MyTextView
        android:id="@+id/dialog_post_game_info_textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="@string/string_postgameinfo_title"
        android:textColor="@color/color_gray"
        android:textSize="@dimen/dimen_textsize_25" />

    <com.dreamfire.whereintheworld.customviews.MyButton
        android:id="@+id/dialog_post_game_info_button_ok"
        style="@style/style_common_dialog_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/string_common_ok" />

    <ScrollView
        style="@style/style_scrollbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/dialog_post_game_info_button_ok"
        android:layout_below="@id/dialog_post_game_info_textview_title" >

        <com.dreamfire.whereintheworld.customviews.MyTextView
            android:id="@+id/dialog_post_game_info_textview_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_horizontal"
            android:textColor="@color/color_gray_dark"
            android:textSize="@dimen/dimen_textsize_18" />
    </ScrollView>

</RelativeLayout>